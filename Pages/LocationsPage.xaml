<?xml version="1.0" encoding="utf-8" ?>\n<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"\n             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"\n             x:Class="KesifUygulamasiTemplate.Pages.LocationsPage"\n             Title="Konumlar">\n\n    <StackLayout Padding="10">\n        <Button Text="Yeni Konum Ekle" Clicked="OnAddLocationClicked" />\n\n        <CollectionView x:Name="LocationsCollectionView"\n                        SelectionMode="Single"\n                        SelectionChanged="OnLocationSelected">\n            <CollectionView.ItemTemplate>\n                <DataTemplate>\n                    <Frame BorderColor="#512BD4"\n                           CornerRadius="8"\n                           Padding="10"\n                           Margin="5">\n                        <StackLayout>\n                            <Label Text="{Binding Title}"\n                                   FontAttributes="Bold"\n                                   FontSize="Medium"/>\n                            <Label Text="{Binding Description}"\n                                   FontSize="Small"\n                                   TextColor="Gray"/>\n                            <Label Text="{Binding Latitude, StringFormat='Enlem: {0:F6}'}"\n                                   FontSize="Small"/>\n                            <Label Text="{Binding Longitude, StringFormat='Boylam: {0:F6}'}"\n                                   FontSize="Small"/>\n                            <Label Text="{Binding CreatedAt, StringFormat='Eklenme Tarihi: {0:dd.MM.yyyy HH:mm}'}"\n                                   FontSize="Micro"\n                                   TextColor="Gray"/>\n                        </StackLayout>\n                    </Frame>\n                </DataTemplate>\n            </CollectionView.ItemTemplate>\n        </CollectionView>\n    </StackLayout>\n\n</ContentPage>\n