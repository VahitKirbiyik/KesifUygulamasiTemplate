<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="KesifUygulamasiTemplate.Pages.RoutePage"
             Title="Rota Oluştur">
    <StackLayout Padding="20" Spacing="16">
        <Label Text="Başlangıç Noktası (Lat,Lng)"/>
        <Entry x:Name="StartEntry" Placeholder="Örn: 39.9,32.8"/>
        <Label Text="Varış Noktası (Lat,Lng)"/>
        <Entry x:Name="EndEntry" Placeholder="Örn: 41.0,29.0"/>
        <Button Text="Rota Hesapla" Command="{Binding GetRouteCommand}"/>
        <maps:Map x:Name="RouteMap" HeightRequest="300" IsShowingUser="True" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </StackLayout>
</ContentPage>
