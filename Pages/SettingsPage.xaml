<?xml version="1.0" encoding="utf-8" ?>\n<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"\n             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"\n             x:Class="KesifUygulamasi.Pages.SettingsPage"\n             Title="Ayarlar">\n\n    <ScrollView>\n        <StackLayout Padding="20" Spacing="25">\n\n            <Label Text="Ayarlar" FontSize="24" FontAttributes="Bold" />\n\n            <!-- Offline Mod -->\n            <StackLayout Orientation="Horizontal" VerticalOptions="Center">\n                <Label Text="Offline Mod:" VerticalOptions="Center" />\n                <Switch x:Name="OfflineModeSwitch"\n                        Toggled="OfflineModeSwitch_Toggled"\n                        HorizontalOptions="EndAndExpand" />\n            </StackLayout>\n\n            <!-- Harita Sağlayıcı Seçimi -->\n            <Label Text="Harita Sağlayıcı Seçimi:" />\n            <Picker ItemsSource="{Binding MapProviders}"\n                    SelectedItem="{Binding SelectedMapProvider, Mode=TwoWay}"\n                    Title="Sağlayıcı Seçin" />\n\n            <!-- Rota Optimizasyon Türü -->\n            <Label Text="Varsayılan Rota Türü:" />\n            <Picker ItemsSource="{Binding RouteOptimizationTypes}"\n                    SelectedItem="{Binding SelectedRouteOptimization, Mode=TwoWay}"\n                    Title="Rota Türü Seçin" />\n\n            <!-- Push Bildirimleri -->\n            <StackLayout Orientation="Horizontal" VerticalOptions="Center">\n                <Label Text="Push Bildirimleri:" VerticalOptions="Center" />\n                <Switch IsToggled="{Binding IsPushEnabled, Mode=TwoWay}" HorizontalOptions="EndAndExpand" />\n            </StackLayout>\n\n            <!-- Konum Izni Durumu -->\n            <StackLayout>\n                <Label Text="Konum Izni Durumu:" FontAttributes="Bold" />\n                <Label x:Name="LocationPermissionLabel"\n                       Text="Izin durumu yukleniyor..." />\n                <Button Text="Izin Kontrol Et / Iste"\n                        Clicked="RequestLocationPermission_Clicked" />\n            </StackLayout>\n\n            <!-- Offline Harita İndirme -->\n            <Label Text="Offline Harita:" FontAttributes="Bold" />\n            <Label Text="Türkiye Haritası (300MB) - İndirilebilir" FontSize="14" />\n            <Button Text="� Haritayı İndir"\n                    BackgroundColor="#4CAF50"\n                    TextColor="White"\n                    Clicked="DownloadOfflineMapButton_Clicked"\n                    CornerRadius="8"\n                    HeightRequest="45" />\n\n            <!-- İndirme Durumu -->\n            <Label x:Name="DownloadStatusLabel"\n                   Text="İndirme tamamlandı ✓"\n                   TextColor="Green"\n                   IsVisible="False" />\n\n        </StackLayout>\n    </ScrollView>\n</ContentPage>\n