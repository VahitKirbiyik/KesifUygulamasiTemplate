<?xml version="1.0" encoding="utf-8"?>\n<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"\n             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"\n             xmlns:local="clr-namespace:KesifUygulamasiTemplate.Views"\n             x:Class="KesifUygulamasiTemplate.MainPage"\n             Title="Ana Sayfa">\n\n    <ScrollView>\n        <VerticalStackLayout Spacing="20" Padding="20">\n\n            <!-- Baslik -->\n            <Label Text="Ollama AI Asistani"\n                   FontSize="24"\n                   FontAttributes="Bold"\n                   HorizontalTextAlignment="Center"\n                   TextColor="{StaticResource Primary}" />\n\n            <!-- Prompt giris alani -->\n            <VerticalStackLayout Spacing="10">\n                <Label Text="Sorunuzu yazin:" FontSize="16" />\n                <Entry x:Name="PromptEntry"\n                       Placeholder="Buraya yazin..."\n                       Text="{Binding Prompt, Mode=TwoWay}" />\n            </VerticalStackLayout>\n\n            <!-- Gonder butonu -->\n            <Button Text="Gonder"\n                    x:Name="SendButton"\n                    BackgroundColor="{StaticResource Primary}"\n                    TextColor="White"\n                    HeightRequest="50"\n                    CornerRadius="8"\n                    Clicked="OnSendPromptClicked" />\n\n            <!-- Polyline Test butonu -->\n            <Button Text="Polyline Testlerini Çalıştır"\n                    x:Name="TestButton"\n                    BackgroundColor="#28a745"\n                    TextColor="White"\n                    HeightRequest="50"\n                    CornerRadius="8"\n                    Clicked="OnTestPolylineClicked" />\n\n            <!-- Cevap alani -->\n            <VerticalStackLayout Spacing="10">\n                <Label Text="Cevap:" FontSize="16" />\n                <Editor x:Name="ResponseEditor"\n                        Placeholder="Cevap burada gorunecek..."\n                        HeightRequest="200"\n                        IsReadOnly="True"\n                        BackgroundColor="#F5F5F5" />\n            </VerticalStackLayout>\n\n            <!-- Ollama Panel -->\n            <local:OllamaPanelControl x:Name="OllamaPanel" />\n\n        </VerticalStackLayout>\n    </ScrollView>\n\n</ContentPage>