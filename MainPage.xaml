<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:KesifUygulamasiTemplate.Views"
             x:Class="KesifUygulamasiTemplate.MainPage"
             Title="Keşif Uygulaması">

    <Grid ColumnDefinitions="*, Auto" RowDefinitions="*">

        <!-- Ana içerik -->
        <StackLayout Grid.Column="0" Padding="10">
            <Label Text="Ana Uygulama Alanı" 
                   FontSize="20" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Ollama Yan Panel -->
        <StackLayout Grid.Column="1" BackgroundColor="#e0e0e0" WidthRequest="300">
            <views:OllamaPanel />
        </StackLayout>

    </Grid>
</ContentPage>
