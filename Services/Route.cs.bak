using System;
using System.Collections.Generic;
using Microsoft.Maui.Devices.Sensors;

namespace KesifUygulamasiTemplate.Services
{
    public class Route
    {
        public string RouteId { get; set; } = Guid.NewGuid().ToString();
        public required Location Start { get; set; }
        public required Location End { get; set; }
        public List<Location> Path { get; set; } = new List<Location>();
        public List<RouteStep> Steps { get; set; } = new List<RouteStep>();
        public double DistanceKm { get; set; }
        public TimeSpan Duration { get; set; }
        public TransportMode TransportMode { get; set; }

        // Eksik olan özellikler
        public List<Location> Points { get; set; } = new List<Location>();
        public double Distance { get; set; }

        // Trafik için eklenen özellikler
        public TimeSpan DurationInTraffic { get; set; }
        public TrafficLevel TrafficLevel { get; set; }
        public List<TrafficWarning> Warnings { get; set; } = new();
    }

    public class RouteStep
    {
        public required string Instruction { get; set; }
        public required Location StartLocation { get; set; }
        public required Location EndLocation { get; set; }
        public double DistanceKm { get; set; }
        public TimeSpan Duration { get; set; }
        public required string ManeuverType { get; set; } // turn-right, turn-left, etc.
    }

    public enum TransportMode
    {
        Driving,
        Walking,
        Bicycling,
        Transit
    }
}
