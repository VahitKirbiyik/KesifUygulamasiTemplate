<UserControl x:Class="KesifUygulamasi.AIHelper.OllamaPanel.OllamaPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="600">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="InputBox" Grid.Row="0" Height="30" Margin="0,0,0,5" 
                 PlaceholderText="Mesajınızı yazın..." />

        <TextBox x:Name="OutputBox" Grid.Row="1" Margin="0,0,0,5" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <Button Grid.Row="2" Content="Gönder" Height="30" Click="SendButton_Click"/>
    </Grid>
</UserControl>
