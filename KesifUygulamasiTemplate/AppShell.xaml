       xmlns:views="clr-namespace:KesifUygulamasiTemplate.Views"
       xmlns:ext="clr-namespace:KesifUygulamasiTemplate.Extensions"
       x:Class="KesifUygulamasiTemplate.AppShell"
       Title="{ext:TranslateBinding Key=AppName}"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="{ext:TranslateBinding Key=MoonCompass}" Icon="moon_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:MoonCompassPage}" />
        </Tab>
        <Tab Title="{ext:TranslateBinding Key=Compass}" Icon="compass.png">
            <ShellContent ContentTemplate="{DataTemplate views:CompassPage}" />
        </Tab>
        <Tab Title="{ext:TranslateBinding Key=Settings}">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
    <ShellContent Route="ar-moon-compass" Title="AR Ay PusulasÄ±" ContentTemplate="{DataTemplate local:ARMoonCompassPage}" />
