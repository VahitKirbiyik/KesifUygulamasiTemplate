# Test fonksiyonlarÄ±
function Test-FileExists {
    param(
        [string]$FilePath,
        [string]$FileName,
        [bool]$Required = $true
    )

    $startTime = Get-Date
    $testPassed = $false
    $errorMessage = ""

    Write-ColorOutput "ğŸ§ª $FileName dosyasÄ± kontrol ediliyor..." "White"

    try {
        $fullPath = Join-Path $ProjectPath $FilePath

        if (Test-Path $fullPath) {
            Write-ColorOutput "  âœ… Dosya bulundu: $FilePath" "Green"

            # Dosya iÃ§eriÄŸi kontrolÃ¼
            $fileInfo = Get-Item $fullPath
            $fileSize = $fileInfo.Length

            if ($fileSize -eq 0) {
                $errorMessage = "Dosya boÅŸ"
                Write-ColorOutput "  âš ï¸  Dosya boÅŸ: $fileSize bytes" "Yellow"
                $testPassed = !$Required  # Required deÄŸilse boÅŸ dosya kabul edilebilir
            } else {
                Write-ColorOutput "  ğŸ“„ Dosya boyutu: $fileSize bytes" "Gray"
                $testPassed = $true

                # Ä°Ã§erik temel kontrolÃ¼
                Test-FileContent -FilePath $fullPath -FileName $FileName
            }
        } else {
            $errorMessage = "Dosya bulunamadÄ±"
            if ($Required) {
                Write-ColorOutput "  âŒ Gerekli dosya bulunamadÄ±: $FilePath" "Red"
            } else {
                Write-ColorOutput "  âš ï¸  Ä°steÄŸe baÄŸlÄ± dosya bulunamadÄ±: $FilePath" "Yellow"
                $testPassed = $true  # Ä°steÄŸe baÄŸlÄ± dosya iÃ§in test baÅŸarÄ±lÄ±
            }
        }

    } catch {
        $errorMessage = $_.Exception.Message
        Write-ColorOutput "  ğŸ’¥ Dosya kontrol hatasÄ±: $errorMessage" "Red"
    } finally {
        $endTime = Get-Date
        $duration = $endTime - $startTime

        $testResults.TotalTests++
        if ($testPassed) {
            $testResults.PassedTests++
        } else {
            $testResults.FailedTests++
        }
        $testResults.TestDuration += $duration

        $testResults.Details += @{
            TestName = "$FileName Dosya KontrolÃ¼"
            FilePath = $FilePath
            Passed = $testPassed
            Required = $Required
            Duration = $duration
            ErrorMessage = $errorMessage
        }
    }
}

function Test-FileContent {
    param(
        [string]$FilePath,
        [string]$FileName
    )

    try {
        $content = Get-Content $FilePath -Raw

        # Temel iÃ§erik kontrolleri
        switch -Wildcard ($FileName) {
            "*Privacy*" {
                # Privacy policy iÃ§in gerekli kelimeler
                $requiredTerms = @("privacy", "data", "personal information", "cookies")
                $missingTerms = $requiredTerms | Where-Object { $content -notmatch $_ }
                if ($missingTerms) {
                    Write-ColorOutput "  âš ï¸  Privacy policy'de eksik terimler: $($missingTerms -join ', ')" "Yellow"
                }
            }
            "*Terms*" {
                # Terms of service iÃ§in gerekli kelimeler
                $requiredTerms = @("terms", "service", "agreement", "liability")
                $missingTerms = $requiredTerms | Where-Object { $content -notmatch $_ }
                if ($missingTerms) {
                    Write-ColorOutput "  âš ï¸  Terms'de eksik terimler: $($missingTerms -join ', ')" "Yellow"
                }
            }
            "*Robots*" {
                # Robots.txt iÃ§in temel yapÄ± kontrolÃ¼
                if ($content -notmatch "User-agent") {
                    Write-ColorOutput "  âš ï¸  Robots.txt'de User-agent bulunamadÄ±" "Yellow"
                }
            }
            "*Sitemap*" {
                # Sitemap.xml iÃ§in domain kontrolÃ¼
                if ($content -notmatch $Domain) {
                    Write-ColorOutput "  âš ï¸  Sitemap.xml'de domain bulunamadÄ±: $Domain" "Yellow"
                }
            }
        }

        Write-ColorOutput "  âœ… Dosya iÃ§eriÄŸi kontrol edildi" "Green"

    } catch {
        Write-ColorOutput "  âš ï¸  Dosya iÃ§eriÄŸi kontrol edilemedi: $($_.Exception.Message)" "Yellow"
    }
}

function Test-WebAccessibility {
    param([string]$Url)

    Write-ColorOutput "ğŸŒ Web eriÅŸilebilirliÄŸi kontrol ediliyor: $Url" "White"

    try {
        $response = Invoke-WebRequest -Uri $Url -Method Head -TimeoutSec 10
        if ($response.StatusCode -eq 200) {
            Write-ColorOutput "  âœ… URL eriÅŸilebilir: $($response.StatusCode)" "Green"
            return $true
        } else {
            Write-ColorOutput "  âŒ URL eriÅŸilemez: $($response.StatusCode)" "Red"
            return $false
        }
    } catch {
        Write-ColorOutput "  âš ï¸  URL kontrol edilemedi: $($_.Exception.Message)" "Yellow"
        return $false
    }
}

function Show-Badge {
    param([string]$BadgeName)

    Write-ColorOutput "ğŸ… Badge kazanÄ±ldÄ±: $BadgeName" "Cyan"

    # Badge dosyasÄ±nÄ± gÃ¼ncelle (varsa)
    $badgeFile = Join-Path $ProjectPath "badge.json"
    if (Test-Path $badgeFile) {
        try {
            $badgeData = Get-Content $badgeFile -Raw | ConvertFrom-Json
            if ($badgeData.PSObject.Properties.Name -contains $BadgeName) {
                $badgeData.$BadgeName = $true
                $badgeData | ConvertTo-Json | Set-Content $badgeFile
                Write-ColorOutput "  âœ… Badge dosyasÄ± gÃ¼ncellendi" "Green"
            }
        } catch {
            Write-ColorOutput "  âš ï¸  Badge dosyasÄ± gÃ¼ncellenemedi" "Yellow"
        }
    }
}

