# Test fonksiyonlarÄ±
function Test-SEOFile {
    param(
        [string]$FilePath,
        [string]$FileName,
        [bool]$Required = $true,
        [int]$MinLength = 0,
        [int]$MaxLength = 0,
        [int]$MinCount = 0,
        [int]$MaxCount = 0
    )

    $startTime = Get-Date
    $testPassed = $false
    $errorMessage = ""
    $warnings = @()

    Write-ColorOutput "ğŸ§ª $FileName dosyasÄ± kontrol ediliyor..." "White"

    try {
        $fullPath = Join-Path $ProjectPath $FilePath

        if (Test-Path $fullPath) {
            Write-ColorOutput "  âœ… Dosya bulundu: $FilePath" "Green"

            # Dosya iÃ§eriÄŸi kontrolÃ¼
            $content = Get-Content $fullPath -Raw
            $fileInfo = Get-Item $fullPath
            $fileSize = $fileInfo.Length

            if ($fileSize -eq 0) {
                $errorMessage = "Dosya boÅŸ"
                Write-ColorOutput "  âš ï¸  Dosya boÅŸ: $fileSize bytes" "Yellow"
                $testPassed = !$Required
            } else {
                Write-ColorOutput "  ğŸ“„ Dosya boyutu: $fileSize bytes" "Gray"

                # Ä°Ã§erik validasyonu
                $contentValid = Test-SEOContent -Content $content -FileName $FileName -MinLength $MinLength -MaxLength $MaxLength -MinCount $MinCount -MaxCount $MaxCount -Warnings ([ref]$warnings)

                if ($contentValid) {
                    $testPassed = $true
                    Write-ColorOutput "  âœ… Dosya iÃ§eriÄŸi geÃ§erli" "Green"
                } else {
                    $errorMessage = "Dosya iÃ§eriÄŸi validasyon hatasÄ±"
                    Write-ColorOutput "  âŒ Dosya iÃ§eriÄŸi geÃ§ersiz" "Red"
                }

                # UyarÄ±larÄ± gÃ¶ster
                foreach ($warning in $warnings) {
                    Write-ColorOutput "  âš ï¸  $warning" "Yellow"
                }
            }
        } else {
            $errorMessage = "Dosya bulunamadÄ±"
            if ($Required) {
                Write-ColorOutput "  âŒ Gerekli dosya bulunamadÄ±: $FilePath" "Red"
            } else {
                Write-ColorOutput "  âš ï¸  Ä°steÄŸe baÄŸlÄ± dosya bulunamadÄ±: $FilePath" "Yellow"
                $testPassed = $true
            }
        }

    } catch {
        $errorMessage = $_.Exception.Message
        Write-ColorOutput "  ğŸ’¥ Dosya kontrol hatasÄ±: $errorMessage" "Red"
    } finally {
        $endTime = Get-Date
        $duration = $endTime - $startTime

        $testResults.TotalTests++
        if ($testPassed) {
            $testResults.PassedTests++
        } else {
            $testResults.FailedTests++
        }
        $testResults.TestDuration += $duration

        $testResults.Details += @{
            TestName = "$FileName SEO KontrolÃ¼"
            FilePath = $FilePath
            Passed = $testPassed
            Required = $Required
            Duration = $duration
            ErrorMessage = $errorMessage
            Warnings = $warnings
        }
    }
}

function Test-SEOContent {
    param(
        [string]$Content,
        [string]$FileName,
        [int]$MinLength,
        [int]$MaxLength,
        [int]$MinCount,
        [int]$MaxCount,
        [ref]$Warnings
    )

    $isValid = $true

    switch -Wildcard ($FileName) {
        "*Description*" {
            # Description kontrolÃ¼
            $length = $Content.Length
            if ($MinLength -gt 0 -and $length -lt $MinLength) {
                $Warnings.Value += "Description Ã§ok kÄ±sa: ${length}/${MinLength} karakter"
                $isValid = $false
            }
            if ($MaxLength -gt 0 -and $length -gt $MaxLength) {
                $Warnings.Value += "Description Ã§ok uzun: ${length}/${MaxLength} karakter"
                $isValid = $false
            }

            # Ã–zel karakter kontrolÃ¼
            if ($Content -match '[<>]') {
                $Warnings.Value += "Description'da HTML etiketleri olmamalÄ±"
            }
        }

        "*Keywords*" {
            # Keywords kontrolÃ¼
            $keywords = $Content -split ',' | ForEach-Object { $_.Trim() } | Where-Object { $_ }
            $count = $keywords.Count

            if ($MinCount -gt 0 -and $count -lt $MinCount) {
                $Warnings.Value += "Yetersiz keyword sayÄ±sÄ±: ${count}/${MinCount}"
                $isValid = $false
            }
            if ($MaxCount -gt 0 -and $count -gt $MaxCount) {
                $Warnings.Value += "Ã‡ok fazla keyword: ${count}/${MaxCount}"
            }

            # Tekrar eden keyword kontrolÃ¼
            $duplicates = $keywords | Group-Object | Where-Object { $_.Count -gt 1 }
            if ($duplicates) {
                $Warnings.Value += "Tekrar eden keyword'ler: $($duplicates.Name -join ', ')"
            }
        }

        "*Title*" {
            # Title kontrolÃ¼
            $length = $Content.Length
            if ($MinLength -gt 0 -and $length -lt $MinLength) {
                $Warnings.Value += "Title Ã§ok kÄ±sa: ${length}/${MinLength} karakter"
                $isValid = $false
            }
            if ($MaxLength -gt 0 -and $length -gt $MaxLength) {
                $Warnings.Value += "Title Ã§ok uzun: ${length}/${MaxLength} karakter"
                $isValid = $false
            }
        }

        "*Meta Tags*" {
            # HTML meta tags kontrolÃ¼
            if ($Content -notmatch '<meta') {
                $Warnings.Value += "Meta etiketleri bulunamadÄ±"
            }
            if ($Content -notmatch 'name="description"') {
                $Warnings.Value += "Description meta etiketi bulunamadÄ±"
            }
            if ($Content -notmatch 'name="keywords"') {
                $Warnings.Value += "Keywords meta etiketi bulunamadÄ±"
            }
        }

        "*Structured Data*" {
            # JSON-LD structured data kontrolÃ¼
            try {
                $jsonData = $Content | ConvertFrom-Json
                if (-not $jsonData.'@context' -or $jsonData.'@context' -notmatch 'schema.org') {
                    $Warnings.Value += "GeÃ§ersiz schema.org context"
                }
                if (-not $jsonData.'@type') {
                    $Warnings.Value += "Missing @type in structured data"
                }
            } catch {
                $Warnings.Value += "GeÃ§ersiz JSON formatÄ±"
                $isValid = $false
            }
        }
    }

    return $isValid
}

function Test-HTMLMetaTags {
    param([string]$HtmlFile)

    Write-ColorOutput "ğŸ” HTML meta etiketleri kontrol ediliyor: $HtmlFile" "White"

    try {
        if (Test-Path $HtmlFile) {
            $content = Get-Content $HtmlFile -Raw

            $checks = @(
                @{ Pattern = '<title>'; Name = "Title etiketi"; Required = $true },
                @{ Pattern = 'name="description"'; Name = "Description meta"; Required = $true },
                @{ Pattern = 'name="keywords"'; Name = "Keywords meta"; Required = $false },
                @{ Pattern = 'name="robots"'; Name = "Robots meta"; Required = $false },
                @{ Pattern = 'property="og:'; Name = "Open Graph meta"; Required = $false },
                @{ Pattern = 'name="twitter:'; Name = "Twitter Card meta"; Required = $false },
                @{ Pattern = 'rel="canonical"'; Name = "Canonical URL"; Required = $false }
            )

            $passedChecks = 0
            foreach ($check in $checks) {
                if ($content -match $check.Pattern) {
                    Write-ColorOutput "  âœ… $($check.Name) bulundu" "Green"
                    $passedChecks++
                } elseif ($check.Required) {
                    Write-ColorOutput "  âŒ $($check.Name) bulunamadÄ± (gerekli)" "Red"
                } else {
                    Write-ColorOutput "  âš ï¸  $($check.Name) bulunamadÄ± (isteÄŸe baÄŸlÄ±)" "Yellow"
                }
            }

            return $passedChecks -ge 2  # En az 2 gerekli etiket
        } else {
            Write-ColorOutput "  âš ï¸  HTML dosya bulunamadÄ±: $HtmlFile" "Yellow"
            return $false
        }
    } catch {
        Write-ColorOutput "  ğŸ’¥ HTML kontrol hatasÄ±: $($_.Exception.Message)" "Red"
        return $false
    }
}

