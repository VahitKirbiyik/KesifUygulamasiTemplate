<?xml version="1.0" encoding="utf-8" ?>\n<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"\n             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"\n             xmlns:ext="clr-namespace:KesifUygulamasiTemplate.Extensions"\n             x:Class="KesifUygulamasiTemplate.Views.SettingsPage"\n             Title="{ext:TranslateBinding Key=Settings}">\n\n    <ScrollView>\n        <VerticalStackLayout Padding="20" Spacing="25">\n\n            <Label Text="{ext:TranslateBinding Key=Settings}" \n                   FontSize="24" \n                   FontAttributes="Bold" />\n\n            <!-- Dil Ayarlari -->\n            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">\n                <Label Text="{ext:TranslateBinding Key=Language}" \n                       FontAttributes="Bold"\n                       Grid.Row="0" \n                       Grid.ColumnSpan="2" />\n\n                <RadioButton x:Name="TurkishOption" \n                            Content="{ext:TranslateBinding Key=LanguageTurkish}"\n                            GroupName="Language"\n                            IsChecked="{Binding IsTurkishSelected}"\n                            CheckedChanged="Turkish_CheckedChanged"\n                            Grid.Row="1" \n                            Grid.Column="0" />\n\n                <RadioButton x:Name="EnglishOption" \n                            Content="{ext:TranslateBinding Key=LanguageEnglish}"\n                            GroupName="Language"\n                            IsChecked="{Binding IsEnglishSelected}"\n                            CheckedChanged="English_CheckedChanged"\n                            Grid.Row="1" \n                            Grid.Column="1" />\n            </Grid>\n            \n            <!-- Offline Mod -->\n            <StackLayout Orientation="Horizontal" VerticalOptions="Center">\n                <Label Text="Offline Mod:" VerticalOptions="Center" />\n                <Switch x:Name="OfflineModeSwitch"\n                        IsToggled="{Binding IsOfflineMode}"\n                        Toggled="OfflineModeSwitch_Toggled"\n                        HorizontalOptions="EndAndExpand" />\n            </StackLayout>\n\n            <!-- Tema Se�imi -->\n            <Label Text="{ext:TranslateBinding Key=Theme}" />\n            <Picker x:Name="ThemePicker"\n                    ItemsSource="{Binding ThemeOptions}"\n                    SelectedItem="{Binding SelectedTheme}"\n                    SelectedIndexChanged="ThemePicker_SelectedIndexChanged">\n            </Picker>\n\n            <!-- Harita Sa�lay�c� Se�imi -->\n            <Label Text="{ext:TranslateBinding Key=MapProvider}" />\n            <Picker x:Name="MapProviderPicker"\n                    ItemsSource="{Binding MapProviders}"\n                    SelectedItem="{Binding SelectedMapProvider}"\n                    SelectedIndexChanged="MapProviderPicker_SelectedIndexChanged">\n            </Picker>\n\n            <!-- Rota Optimizasyonu Se�imi -->\n            <Label Text="{ext:TranslateBinding Key=RouteOptimization}" />\n            <Picker x:Name="RouteOptimizationPicker"\n                    ItemsSource="{Binding RouteOptimizationTypes}"\n                    SelectedItem="{Binding SelectedRouteOptimization}"\n                    SelectedIndexChanged="RouteOptimizationPicker_SelectedIndexChanged">\n            </Picker>\n\n            <!-- Konum �zni Durumu -->\n            <StackLayout>\n                <Label Text="{ext:TranslateBinding Key=LocationPermissionStatus}" \n                       FontAttributes="Bold" />\n                <Label x:Name="LocationPermissionLabel"\n                       Text="{ext:TranslateBinding Key=Loading}" />\n                <Button Text="{ext:TranslateBinding Key=CheckRequestPermission}"\n                        Clicked="RequestLocationPermission_Clicked" />\n            </StackLayout>\n\n            <!-- Uygulama Bilgileri -->\n            <StackLayout>\n                <Label Text="{ext:TranslateBinding Key=AppInfo}" \n                       FontAttributes="Bold" />\n                <Label>\n                    <Label.FormattedText>\n                        <FormattedString>\n                            <Span Text="{ext:Translate Key=Version}" />\n                            <Span Text=": " />\n                            <Span Text="{Binding AppVersion}" />\n                        </FormattedString>\n                    </Label.FormattedText>\n                </Label>\n            </StackLayout>\n\n            <!-- Profil Sayfasına Git -->\n            <Button Text="{ext:TranslateBinding Key=GoToProfile}"\n                    Command="{Binding GoToProfileCommand}"\n                    BackgroundColor="DodgerBlue"\n                    TextColor="White"\n                    CornerRadius="8"\n                    HeightRequest="50"\n                    Margin="0,20,0,0" />\n\n        </VerticalStackLayout>\n    </ScrollView>\n</ContentPage>