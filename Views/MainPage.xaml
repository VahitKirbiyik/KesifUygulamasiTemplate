<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KesifUygulamasiTemplate.Views.MainPage"
             Title="Ollama Chat">

    <VerticalStackLayout Padding="20">
        <Entry x:Name="PromptEntry" Placeholder="Prompt yazın..." />
        <Button Text="Gönder" Clicked="OnSendClicked"/>
        <Editor x:Name="OutputBox" HeightRequest="300" IsReadOnly="True"/>
    </VerticalStackLayout>
</ContentPage>
